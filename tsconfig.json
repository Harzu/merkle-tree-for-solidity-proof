{
    "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "target": "es5",
      "rootDir": "./src",
      "outDir": "./lib",
      "lib": [ "es6", "dom" ],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "sourceMap": true,
      "skipLibCheck": true,
    },
  
    "include": [ "./src/**/*" ],
    "exclude": [
      "**/node_modules/**/*",
      "**/lib/**/*",
      "../tests/**/*",
    ]
  }